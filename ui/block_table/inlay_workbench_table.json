{
    "namespace": "inlay_workbench_table",

    "table_input": {
        "type": "collection_panel",
        "anchor_from": "center",
        "anchor_to": "center",
        "size": [ 0, 0 ],

        "collection_name": "container_items",
        "$item_collection_name": "container_items",
        "controls": [
            {
                "weapon@common.container_item": {
                    "offset": [0, -25],
                    "collection_index": 0
                }
            },
            {
                "field0@common.container_item": {
                    "offset": [-45, 5],
                    "collection_index": 1
                }
            },
            {
                "field1@common.container_item": {
                    "offset": [0, 10],
                    "collection_index": 2
                }
            },
            {
                "field2@common.container_item": {
                    "offset": [45, 5],
                    "collection_index": 3
                }
            }
        ]
    },

    "toolbar": {
        "type": "image",
        "texture": "textures/ui/toolbar_background",
        "size": [
            "100%cm + 17px",
            26
        ],
        "offset": [ 0, 3 ],
        "anchor_from": "top_right",
        "anchor_to": "bottom_right",
        "controls": [
            {
                "inner": {
                    "type": "stack_panel",
                    "orientation": "horizontal",
                    "size": [
                        "100%c",
                        18
                    ],
                    "controls": [
                        {
                            "close_button_panel": {
                                "type": "panel",
                                "size": [ 15, "100%" ],
                                "bindings": [
                                    {
                                        "binding_name": "#close_button_visible",
                                        "binding_name_override": "#visible"
                                    }
                                ],
                                "controls": [
                                    {
                                        "close_button@common.light_close_button": {
                                            "offset": [ 0, 0 ],
                                            "anchor_from": "center",
                                            "anchor_to": "center"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },

    "inlay_workbench_table_panel": {
        "type": "panel",
        "controls": [
            { "container_gamepad_helpers@common.container_gamepad_helpers": {} },
            { "selected_item_details_factory@common.selected_item_details_factory": {} },
            { "item_lock_notification_factory@common.item_lock_notification_factory": {} },
            {
                "root_panel@common.root_panel": {
                    "layer": 1,
                    "controls": [
                        {
                            "main_panel": {
                                "type": "panel",
                                "size": [177, 166],
                                "controls": [
                                    {
                                        "toolbar@inlay_workbench_table.toolbar": {}
                                    },
                                    {
                                        "common_panel@common.common_panel": {
                                            "$show_close_button": false
                                        }
                                    },
                                    {
                                        "chest_panel": {
                                            "type": "panel",
                                            "layer": 5,
                                            "controls": [
                                                {
                                                    "small_chest_panel_top_half": {
                                                        "type": "panel",
                                                        "size": ["100%", "50%"],
                                                        "offset": [0, 12],
                                                        "anchor_to": "top_middle",
                                                        "anchor_from": "top_middle",
                                                        "controls": [
                                                            {
                                                                "chest_label": {
                                                                    "type": "label",
                                                                    "offset": [0, -5],
                                                                    "anchor_from": "top_middle",
                                                                    "anchor_to": "top_middle",
                                                                    "text": "鑲嵌工藝台",
                                                                    "color": "$title_text_color",
                                                                    "layer": 2
                                                                }
                                                            },
                                                            {
                                                                "table_input@inlay_workbench_table.table_input": {}
                                                            }
                                                        ]
                                                    }
                                                },
                                                { "inventory_panel_bottom_half_with_label@common.inventory_panel_bottom_half_with_label": {} },
                                                { "hotbar_grid@common.hotbar_grid_template": {} },
                                                { "inventory_take_progress_icon_button@common.inventory_take_progress_icon_button": {} },
                                                { "flying_item_renderer@common.flying_item_renderer": { "layer": 15 } }
                                            ]
                                        }
                                    }
                                ]
                            }
                        },
                        { "inventory_selected_icon_button@common.inventory_selected_icon_button": {} },
                        { "gamepad_cursor@common.gamepad_cursor_button": {} }
                    ]
                }
            }
        ]
    }
}